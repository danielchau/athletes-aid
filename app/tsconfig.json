{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ]
    },

    "include": ["src/externals.d.ts", "server/**/*"],
    "exclude": ["node_modules"]
}
